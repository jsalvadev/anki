---
import RepeatIcon from '@/assets/icons/Repeat.astro';

interface Props {
  frontImage?: string;
  frontDescription?: string;
  frontSentence?: string;
}

const {
  frontImage = 'https://images.unsplash.com/photo-1529778873920-4da4926a72c2',
  frontDescription = 'A cute cat showing a playful expression',
  frontSentence = 'The cat is ______ at the camera.'
} = Astro.props;
---

<div
  class="w-full h-full bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl overflow-hidden border border-gray-700/50 backdrop-blur-sm shadow-2xl shadow-white/5"
>
  <div class="flex h-full">
    <!-- Frente de la tarjeta -->
    <div
      class="front absolute w-full h-full backface-hidden bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl overflow-hidden border border-gray-700/50 backdrop-blur-sm shadow-2xl"
    >
      <div class="flex h-full">
        <!-- Columna izquierda - Imagen -->
        <div class="w-1/3 h-full relative overflow-hidden">
          <img
            class="h-full w-full object-cover transition-transform duration-500"
            src={frontImage}
            alt="Card image"
          />
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-transparent to-gray-900/90"></div>
        </div>

        <!-- Columna derecha - Contenido -->
        <div class="w-2/3 p-8 flex flex-col justify-center space-y-6">
          <p class="text-lg text-gray-400 leading-relaxed">
            {frontDescription}
          </p>

          <p class="text-xl text-gray-300 font-medium">
            {frontSentence}
          </p>

          <div class="absolute bottom-4 right-4 text-xs text-gray-500 font-light flex items-center gap-1">
            Hover to flip
            <RepeatIcon class="size-4" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
